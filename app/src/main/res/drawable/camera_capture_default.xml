<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Circle -->
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="#00FF0000" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Cicle -->
    <item
        android:right="8dp"
        android:left="8dp"
        android:top="8dp"
        android:bottom="8dp">
        <shape
            android:shape="oval">
            <solid
                android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>
