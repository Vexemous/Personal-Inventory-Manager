<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Circle -->
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="#00FF0000" />
            <stroke
                android:width="1dp"
                android:color="#A3FFFFFF" />
        </shape>
    </item>

    <!-- Cicle -->
    <item
        android:right="12dp"
        android:left="12dp"
        android:top="12dp"
        android:bottom="12dp">
        <shape
            android:shape="oval">
            <solid
                android:color="#A3FFFFFF" />
        </shape>
    </item>
</layer-list>