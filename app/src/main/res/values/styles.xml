<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="ButtonWithShadow" parent="Widget.Material3.Button.ElevatedButton">
        <!-- Add other styling attributes as needed -->
        <item name="cornerRadius">20dp</item>
        <item name="rippleColor">@color/md_theme_light_primaryContainer</item>
        <item name="android:backgroundTint">@color/md_theme_light_primary</item>
        <item name="elevation">4dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_theme_light_background</item>
    </style>

    <style name="ButtonWithoutShadow" parent="Widget.Material3.Button">
        <!-- Add other styling attributes as needed -->
        <item name="cornerRadius">20dp</item>
        <item name="rippleColor">@color/md_theme_light_primaryContainer</item>
        <item name="android:backgroundTint">@color/md_theme_light_primary</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_theme_light_background</item>
    </style>

    <style name="PoppinsHeadlineText32" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#363942</item>
    </style>

    <style name="PoppinsTitleText22" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#363942</item>
        <item name="lineHeight">30dp</item>
    </style>

    <style name="PoppinsBodyText14" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">#363942</item>
    </style>

    <style name="HintColor" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColorHint">@color/md_theme_light_secondary</item>
    </style>

    <style name="AppBarStyle" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/md_theme_light_primary</item>
    </style>

    <style name="Toolbar_Theme" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="titleTextColor">@color/md_theme_light_onPrimary</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="iconTint">@color/md_theme_light_onPrimary</item>
        <item name="colorControlNormal">@color/md_theme_light_onPrimary</item>
        <item name="navigationIconTint">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="Toolbar_Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Image_Fullscreen" parent="android:Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="colorControlNormal">@color/md_theme_light_onPrimary</item>
    </style>
    
    <style name="Theme_MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="tint">@color/md_theme_dark_background</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="CardViewSquare" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

</resources>